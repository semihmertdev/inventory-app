<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
</head>
<body>
    <h1>Items</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Category</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
        <% items.forEach(item => { %>
            <tr>
                <td><a href="/items/<%= item.id %>"><%= item.name %></a></td>
                <td><%= item.description %></td>
                <td><%= item.quantity %></td>
                <td><%= item.price %></td>
                <td><%= item.category_name %></td>
                <td>
                    <% if (item.photo_url) { %>
                        <img src="<%= item.photo_url %>" alt="Item Photo" style="max-width: 100px;">
                    <% } %>
                </td>
                <td>
                    <form action="/items/<%= item.id %>/delete" method="get" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                    <a href="/items/<%= item.id %>/edit">Edit</a>
                </td>
            </tr>
        <% }); %>
    </table>
    <a href="/items/new">Add New Item</a>
    <a href="/">Back to Home</a>
</body>
</html>
