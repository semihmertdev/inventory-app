<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="main-content">


        <div class="navigation">
            <ul>
                <li><a href="/categories">View All Categories</a></li>
                <li><a href="/items">View All Items</a></li>
                <li><a href="/">Home</a></li>
                <li><a href="#" onclick="toggleForm('categoryForm')">Add Category</a></li>
                <li><a href="#" onclick="toggleForm('itemForm')">Add Item</a></li>
            </ul>
        </div>

        <!-- New Featured Categories Section -->
        <div class="featured-categories">
            <h2>Featured Categories</h2>
            <div class="category-list">
                <% featuredCategories.forEach(function(category) { %>
                    <div class="category-card">
                        <img src="<%= category.photo_url %>" alt="<%= category.name %>">
                        <h3><%= category.name %></h3>
                        <p><%= category.description %></p>
                        <a href="/categories/<%= category.id %>">View Category</a>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- New Featured Items Section -->
        <div class="featured-items">
            <h2>Featured Items</h2>
            <div class="item-list">
                <% featuredItems.forEach(function(item) { %>
                    <div class="item-card">
                        <img src="<%= item.photo_url %>" alt="<%= item.name %>">
                        <h3><%= item.name %></h3>
                        <p><%= item.description %></p>
                        <p>Price: $<%= item.price %></p>
                        <a href="/items/<%= item.id %>">View Item</a>
                    </div>
                <% }); %>
            </div>
        </div>

        <div class="forms">
            <div id="categoryForm" class="form-container">
                <h3>Add New Category</h3>
                <form action="/categories" method="POST" enctype="multipart/form-data">
                    <div>
                        <label for="categoryName">Name:</label>
                        <input type="text" id="categoryName" name="name" required>
                    </div>
                    <div>
                        <label for="categoryDescription">Description:</label>
                        <textarea id="categoryDescription" name="description" required></textarea>
                    </div>
                    <div>
                        <label for="categoryPhoto">Photo:</label>
                        <input type="file" id="categoryPhoto" name="photo">
                    </div>
                    <button type="submit">Add Category</button>
                </form>
            </div>

            <div id="itemForm" class="form-container">
                <h3>Add New Item</h3>
                <form action="/items" method="POST" enctype="multipart/form-data">
                    <div>
                        <label for="itemName">Name:</label>
                        <input type="text" id="itemName" name="name" required>
                    </div>
                    <div>
                        <label for="itemDescription">Description:</label>
                        <textarea id="itemDescription" name="description" required></textarea>
                    </div>
                    <div>
                        <label for="itemQuantity">Quantity:</label>
                        <input type="number" id="itemQuantity" name="quantity" required>
                    </div>
                    <div>
                        <label for="itemPrice">Price:</label>
                        <input type="number" id="itemPrice" name="price" step="0.01" required>
                    </div>
                    <div>
                        <label for="itemCategory">Category:</label>
                        <select id="itemCategory" name="category_id" required>
                            <% categories.forEach(function(category) { %>
                                <option value="<%= category.id %>"><%= category.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div>
                        <label for="itemPhoto">Photo:</label>
                        <input type="file" id="itemPhoto" name="photo">
                    </div>
                    <button type="submit">Add Item</button>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
</html>