<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">

</head>
<body>
    
    <div class="main-content">

        <div class="navigation">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/categories">Categories</a></li>
                <li><a href="/items">Items</a></li>
                <li><a href="#" onclick="toggleForm('categoryForm')">Add Category</a></li>
                <li><a href="#" onclick="toggleForm('itemForm')">Add Item</a></li>
            </ul>
        </div>

        <div class="main-banner">
            <video width="100%" height="auto" autoplay loop muted playsinline>
                <source src="https://videos.pexels.com/video-files/7914827/7914827-hd_1920_1080_30fps.mp4" type="video/mp4">
                Your browser does not support the video tag.
              </video>
              
            <div class="banner-content">
                <a href="/items" class="banner-button">View All Games</a>
            </div>
        </div>

        <!-- Featured Categories Section -->
        <div class="featured-categories">
            <div class="banner categories-banner">
                <h2>Featured Categories</h2>
                <p>Explore our curated selection of top categories</p>
            </div>
            <div class="category-list">
                <% featuredCategories.forEach(function(category) { %>
                    <a href="/categories/<%= category.id %>" class="category-card">
                        <img src="<%= category.photo_url %>" alt="<%= category.name %>">
                        <h3><%= category.name %></h3>
                    </a>                    
                <% }); %>
            </div>
        </div>

        <!-- Featured Items Section -->
        <div class="featured-items">
            <div class="banner items-banner">
                <h2>Featured Items</h2>
                <p>Explore our curated selection of top items</p>
            </div>
            <div class="item-list">
                <% featuredItems.forEach(function(item) { %>
                    <a href="/items/<%= item.id %>" class="item-card">
                        <img src="<%= item.photo_url %>" alt="<%= item.name %>">
                        <h3><%= item.name %></h3>
                    </a>                    
                <% }); %>
            </div>
        </div>

        <div class="forms">
            <div id="categoryForm" class="collapsible-form">
                <div class="form-header" onclick="toggleForm('categoryForm')">Add New Category</div>
                <div class="form-container">
                    <form action="/categories" method="POST" enctype="multipart/form-data">
                        <div>
                            <label for="categoryName">Name:</label>
                            <input type="text" id="categoryName" name="name" required>
                        </div>
                        <div>
                            <label for="categoryDescription">Description:</label>
                            <textarea id="categoryDescription" name="description" required></textarea>
                        </div>
                        <div>
                            <label for="categoryPhoto">Photo:</label>
                            <input type="file" id="categoryPhoto" name="photo">
                        </div>
                        <button type="submit">Add Category</button>
                    </form>
                </div>
            </div>

            <div id="itemForm" class="collapsible-form">
                <div class="form-header" onclick="toggleForm('itemForm')">Add New Item</div>
                <div class="form-container">
                    <form action="/items" method="POST" enctype="multipart/form-data">
                        <div>
                            <label for="itemName">Name:</label>
                            <input type="text" id="itemName" name="name" required>
                        </div>
                        <div>
                            <label for="itemDescription">Description:</label>
                            <textarea id="itemDescription" name="description" required></textarea>
                        </div>
                        <div>
                            <label for="itemQuantity">Quantity:</label>
                            <input type="number" id="itemQuantity" name="quantity" required>
                        </div>
                        <div>
                            <label for="itemPrice">Price:</label>
                            <input type="number" id="itemPrice" name="price" step="0.01" required>
                        </div>
                        <div>
                            <label for="itemCategory">Category:</label>
                            <select id="itemCategory" name="category_id" required>
                                <% categories.forEach(function(category) { %>
                                    <option value="<%= category.id %>"><%= category.name %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div>
                            <label for="itemPhoto">Photo:</label>
                            <input type="file" id="itemPhoto" name="photo">
                        </div>
                        <button type="submit">Add Item</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
</html>
