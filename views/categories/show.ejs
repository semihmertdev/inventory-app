<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category.name %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="navigation">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/categories">Categories</a></li>
            <li><a href="/items">Items</a></li>
        </ul>
    </div>

    <div class="category-details">
        <div class="category-header">
            <h1><%= category.name %></h1>
            <p><%= category.description %></p>
            <% if (category.photo_url) { %>
                <img src="<%= category.photo_url %>" alt="Category Photo" class="category-photo">
            <% } %>
        </div>

        <h2>Items in this category:</h2>
        <% if (items.length > 0) { %>
            <div class="items-list">
                <% items.forEach(item => { %>
                    <div class="item-card">
                        <img src="<%= item.photo_url %>" alt="<%= item.name %> Photo">
                        <a href="/items/<%= item.id %>" class="item-card">
                            <img src="<%= item.photo_url %>" alt="<%= item.name %>">
                        </a>    
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p>No items in this category.</p>
        <% } %>
    </div>

    <div class="actions">
        <a href="/items/new">Add New Item</a>
        <a href="/categories">Back to Categories</a>
        <a href="/categories/<%= category.id %>/delete" class="btn btn-delete">Delete Category</a>
    </div>
</body>
</html>




